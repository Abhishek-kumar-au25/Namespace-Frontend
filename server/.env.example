# Server-side .env.example - copy to server/.env or set environment variables in your host
# Do NOT commit the file containing your secrets.

PORT=4000
FRONTEND_URL=http://localhost:3000
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# SMTP (Contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_email@example.com
SMTP_PASS=your_app_password
MAIL_TO=your_email@example.com
MAIL_FROM=Namespace Consultants <your_email@example.com>

# reCAPTCHA (v3)
RECAPTCHA_SECRET_KEY=
RECAPTCHA_MIN_SCORE=0.5

# Optional: limit settings for rate limiter
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30
